{
    "name": "madebydavid/wordpress-skeleton",
    "description": "Wordpress Skeleton",
    "authors": [
	{
		"name": "madebydavid",
		"email": "sutherland.dave@gmail.com"
	}
    ],
    "repositories":[
        {
            "type":"composer",
            "url":"http://wpackagist.org"
        },
	{
		"type": "package",
		"package": {
			"name": "wordpress/wordpress",
			"version": "3.6.1",
			"dist": {
				"url":"http://wordpress.org/wordpress-3.6.1.zip",
				"type":"zip"
			},
			"require": {
				"johnpbloch/wordpress-core-installer": "~0.1"
			},
			"type": "wordpress-core"
		}
	}
    ],
    "require": {
		"wordpress/wordpress": "3.6.1",
		"composer/installers": "~1.0",
		"madebydavid/wordpress-skeleton-config-salter":  "0.0.*"
    },
    "autoload": {
        "psr-0": {
        }
    },
    "extra": {
		"installer-paths": {
			"content/plugins/{$name}": [
                "type:wordpress-plugin"            
            ],
            "content/mu-plugins/{$name}" : [
                "type:wordpress-muplugin"
            ],
            "content/themes/{$name}" : [
                "type:wordpress-theme"
            ]
		}
    },
        "scripts": {
                "post-install-cmd": [
                        "MadeByDavid\\WordpressSkeletonConfigSalter::salt"
                ]
        }
}
